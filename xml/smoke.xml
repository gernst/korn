<?xml version="1.0"?>
<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.9//EN" "https://www.sosy-lab.org/benchexec/benchmark-1.9.dtd">
<benchmark tool="korn" timelimit="1 min" hardtimelimit="1 min" memlimit="30 GB" cpuCores="1">

  <require cpuModel="Intel Xeon E3-1230 v5 @ 3.40 GHz" cpuCores="1"/>
  <!-- <require cpuModel="Intel Core i7-6700" /> -->

  <resultfiles>**.graphml</resultfiles>

  <option name="-model"/>
  <option name="-witness">witness.graphml</option>
  <option name="-write" />
  <option name="-confirm" />
  <option name="-random">10</option>
  <option name="-timeout">20</option>
  <option name="-golem"/>
  <option name="-timeout">20</option>
  <option name="-z3"/>
  <option name="-timeout">20</option>
  <option name="-eld"/>

<rundefinition name="smoke">
  <tasks name="Arrays">
    <includesfile>../sv-benchmarks/c/Arrays.set</includesfile>
    <propertyfile>../sv-benchmarks/c/properties/unreach-call.prp</propertyfile>
  </tasks>

  <tasks name="ControlFlow">
    <includesfile>../sv-benchmarks/c/ControlFlow.set</includesfile>
    <propertyfile>../sv-benchmarks/c/properties/unreach-call.prp</propertyfile>
  </tasks>

  <tasks name="Loops">
    <includesfile>../sv-benchmarks/c/Loops-no-nla-digbench-scaling.set</includesfile>
    <propertyfile>../sv-benchmarks/c/properties/unreach-call.prp</propertyfile>
  </tasks>

  <tasks name="Recursive">
    <includesfile>../sv-benchmarks/c/Recursive.set</includesfile>
    <propertyfile>../sv-benchmarks/c/properties/unreach-call.prp</propertyfile>
  </tasks>

  <tasks name="XCSP">
    <includesfile>../sv-benchmarks/c/XCSP.set</includesfile>
    <propertyfile>../sv-benchmarks/c/properties/unreach-call.prp</propertyfile>
  </tasks>

  <!-- <tasks name="Debug">
    <includesfile>../sv-benchmarks/c/Debug.set</includesfile>
    <propertyfile>../sv-benchmarks/c/properties/unreach-call.prp</propertyfile>
  </tasks> -->
</rundefinition>

  <columns>
    <column title="backend">backend:</column>
  </columns>

</benchmark>
